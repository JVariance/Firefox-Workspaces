@import "app.postcss";

:root {
	color-scheme: light dark;
	--outline-color: light-dark(#5021ff, #5021ff);

	--body-bg: light-dark(#fff, #1c1b22);
	--body-color: light-dark(#000, #fff);

	--button-bg: light-dark(#fff, #211b2f);
	--button-bg-hover: light-dark(#e9e9fd, #3c3b53);
	--button-bg-focus: light-dark(#e9e9fd, #3c3b53);
	--button-border-color: light-dark(#e9e9fd, #43385b);
	--button-hover-border-color: light-dark(#c9c6ff, #43385b);
	--button-focus-border-color: light-dark(#c9c6ff, #43385b);
	--button-color: light-dark(#272464, #fff);

	--search-bg: light-dark(#f2f2fd, #1a1524);
	--search-bg-hover: light-dark(
		color-mix(in hsl, var(--search-bg) 95%, black),
		#22212d
	);
	--search-bg-focus: light-dark(
		color-mix(in hsl, var(--search-bg) 95%, black),
		#22212d
	);
	--search-placeholder-color: light-dark(#716ea2, #fff);
	--search-color: light-dark(#272464, #fff);
	--search-border-color: light-dark(transparent, #43385b);

	--icon-fill: light-dark(#272464, #fff);

	--workspace-bg: light-dark(transparent, transparent);
	--workspace-color: light-dark(#000, #fff);
	--workspace-bg-hover: light-dark(#f2f2fd, #302f40);
	--workspace-bg-focus: light-dark(#f2f2fd, #302f40);
	--workspace-active-bg: light-dark(#c9c6ff, #c9c6ff);
	--workspace-active-bg-hover: light-dark(
		color-mix(in hsl, var(--workspace-active-bg) 85%, white),
		color-mix(in hsl, var(--workspace-active-bg) 85%, white)
	);
	--workspace-active-bg-focus: light-dark(
		color-mix(in hsl, var(--workspace-active-bg) 85%, white),
		color-mix(in hsl, var(--workspace-active-bg) 85%, white)
	);
	--workspace-active-color: light-dark(#272464, #272464);
}

html[theme="browser"] {
	//--button-bg: color-mix(in hsl, black 20%, transparent);
	--icon-fill: color-mix(in hsl, light-dark(black, white) 50%, var(--search-bg));
	--search-placeholder-color: color-mix(in hsl, light-dark(black, white) 75%, var(--search-bg));
	--search-color: light-dark(#000, #fff);
	--button-bg-hover: color-mix(in hsl, var(--button-bg) 85%, black);
	--button-border-color: color-mix(in hsl, var(--button-bg) 85%, black);
	--workspace-bg-hover: color-mix(in hsl, black 20%, var(--body-bg));
	--workspace-bg-focus: color-mix(in hsl, black 20%, var(--body-bg));
	--search-bg: light-dark(
		color-mix(in hsl, black 10%, var(--body-bg)),
		color-mix(in hsl, black 30%, var(--body-bg))
	);
	--search-bg-hover: light-dark(
		color-mix(in hsl, black 20%, var(--body-bg)),
		color-mix(in hsl, black 40%, var(--body-bg))
	);
	--search-bg-focus: var(--search-bg-hover);
}

body {
	@apply bg-[--body-bg] text-[--body-text] min-h-[24rem] p-0 m-0 @container w-dvw h-dvh overflow-hidden;
}

button {
	@apply rounded-md p-2;
	@apply bg-[--button-bg] hover:bg-[--button-bg-hover] focus-within:bg-[--button-bg-hover] text-[--button-color] border-[--button-border-color] hover:border-[--button-hover-border-color] focus-within:border-[--button-hover-border-color];

	&.ghost {
		&:not(:focus, :hover) {
			@apply bg-transparent;
		}
	}

	&.reset {
		@apply bg-transparent p-0;
	}
}

.workspace {
	button {
		@apply text-[--workspace-color];
	}
	&.active {
		button {
			@apply text-[--workspace-active-color];
		}
	}
}
